{
  "_description": "CI/CD pipeline configuration with fast execution and error tolerance",
  "_usage": "Optimized for continuous integration with quick feedback and robust error handling",
  
  "system": {
    "joern_path": "joern/joern-cli",
    "output_base_dir": "ci_verification_output",
    "temp_dir": "ci_temp_files",
    "max_concurrent_tests": 2,
    "cleanup_temp_files": true,
    "verbose_logging": false
  },
  
  "languages": {
    "python": {
      "name": "Python",
      "file_extension": ".py",
      "tool_name": "pysrc2cpg.bat",
      "command_template": "{tool_path} {memory_allocation} {input_file} --output {output_dir}",
      "memory_allocation": "-J-Xmx4g",
      "timeout_seconds": 180,
      "alternative_tools": ["tree-sitter", "ast", "libcst"]
    },
    
    "java": {
      "name": "Java",
      "file_extension": ".java",
      "tool_name": "javasrc2cpg.bat",
      "command_template": "{tool_path} {memory_allocation} {input_file} --output {output_dir}",
      "memory_allocation": "-J-Xmx4g",
      "timeout_seconds": 240,
      "alternative_tools": ["eclipse-jdt", "spoon", "javaparser"]
    },
    
    "c": {
      "name": "C",
      "file_extension": ".c",
      "tool_name": "c2cpg.bat",
      "command_template": "{tool_path} {memory_allocation} {input_file} --output {output_dir}",
      "memory_allocation": "-J-Xmx4g",
      "timeout_seconds": 180,
      "alternative_tools": ["clang", "gcc", "tree-sitter"]
    },
    
    "javascript": {
      "name": "JavaScript",
      "file_extension": ".js",
      "tool_name": "jssrc2cpg.bat",
      "command_template": "{tool_path} {memory_allocation} {input_file} --output {output_dir}",
      "memory_allocation": "-J-Xmx3g",
      "timeout_seconds": 120,
      "alternative_tools": ["babel", "acorn", "tree-sitter"]
    }
  }
}